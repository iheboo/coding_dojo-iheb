@model Dishes

<h1>Add a new Dish!</h1>
 <h1 class="display-4">Welcome</h1>
<p><a href="Chefs">chefs</a>|<a href="">Add Chef </a>|<a href="">dishes</a>|<a href="createDishes">ADD dishes</a></p>
<form method="post" asp-action="Create" asp-controller="Home">
    <div class="form-group">
        <span asp-validation-for="Creator"></span>
        <label asp-for="Creator"></label>
        <select asp-for="Creator">
        @foreach ( Chef  b in  ViewBag.AllChefs )
        {
            <option selected value="@b.ChefId">@b.FristName @b.LastName</option>
        }
        </select>
    <div class="form-group">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input asp-for="Name">
    </div>
    <div class="form-group">
        <span asp-validation-for="Tastiness"></span>
        <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness">
        @for(var tasty = 1; tasty <= 5; tasty++)
        {
            if(tasty == 5)
            {
                <option selected value="@tasty">@tasty</option>
            }
            else
            {
                <option value="@tasty">@tasty</option>
            }
        }
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Calories"></span>
        <label asp-for="Calories"></label>
        <input asp-for="Calories">
    </div>
    <div class="form-group">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
    </div>
   <input type="submit" value="Add dishes" class="btn btn-info">
</form>